# üîê Environment Variables Configuration

# ================================
# GitHub Configuration
# ================================
# Required for automated implementation workflow
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPOSITORY=ArthurProjectCorrea/template-project

# ================================
# NPM Publishing Configuration  
# ================================
# Required for automated package publishing
NPM_TOKEN=your_npm_access_token_here
NPM_REGISTRY=https://registry.npmjs.org/
NPM_SCOPE=@arthurcorreadev

# ================================
# Changeset Configuration
# ================================
# Automated versioning and changelog generation
CHANGESET_BOT_TOKEN=your_changeset_bot_token_here

# ================================
# Development Environment
# ================================
NODE_ENV=development
PORT=3000
API_PORT=3001

# ================================
# Database Configuration
# ================================
# Configure based on your database needs
DATABASE_URL=postgresql://user:password@localhost:5432/template_project_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=template_project_dev
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# ================================
# Authentication & Security
# ================================
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ================================
# API Configuration
# ================================
API_BASE_URL=http://localhost:3001
API_TIMEOUT=30000

# ================================
# Frontend Configuration
# ================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ENVIRONMENT=development

# ================================
# Monitoring & Analytics
# ================================
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ID=your_analytics_id_here

# ================================
# Email Configuration
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@arthurcorrea.dev

# ================================
# File Upload & Storage
# ================================
UPLOAD_MAX_SIZE=10485760
STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_s3_bucket
AWS_REGION=us-east-1

# ================================
# Redis Configuration
# ================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ================================
# External APIs
# ================================
# Add your external API keys here
EXTERNAL_API_KEY=your_external_api_key
WEBHOOK_SECRET=your_webhook_secret

# ================================
# Testing Configuration
# ================================
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/template_project_test
TEST_REDIS_URL=redis://localhost:6380

# ================================
# Build & Deployment
# ================================
BUILD_ANALYZE=false
TURBO_TOKEN=your_turbo_remote_cache_token
TURBO_TEAM=your_turbo_team_name

# ================================
# Feature Flags
# ================================
FEATURE_FLAG_NEW_UI=true
FEATURE_FLAG_BETA_FEATURES=false
